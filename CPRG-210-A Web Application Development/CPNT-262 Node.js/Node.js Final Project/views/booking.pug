doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title #{_title}
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/styles.min.css')

include includes/navbar.pug
section.contact-clean
    console.log(result[0])
    form(id="register" method='POST' action="/booking-post")
        h2.text-center New Booking
            select.form-select.my-3(name="CustomerId")
                option Select a customer
                    each customer in customers
                        option(value=customer.CustomerId) #{customer.CustomerName}
            select.form-select.mt-3(name="PackageId")
                each pack in packages
                    option(value=pack.PackageId) #{pack.PackageName}
        button.btn.btn-primary(type='submit') Submit

include includes/footer.pug
