doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title #{_title}
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/styles.min.css')

include includes/navbar.pug
section.photo-gallery.pt-5.mt-4
    .container
        .intro
            h1.text-center.mb-3 Our Agencies
            p.text-center Two locations to serve you in the Heart of Calgary and Okotoks
        .row.photos(data-bss-baguettebox='')
            each agency in result
                .col-sm-6.item
                    img.img-fluid(src=agency.AgncyPhoto, alt="Agency Photo")
                    h2 #{agency.AgncyAddress}
                    ul 
                        li #{agency.AgncyCity}
                        li #{agency.AgncyProv}
                        li #{agency.AgncyPostal}
                        li #{agency.AgncyCountry}
                        li #{agency.AgncyPhone}
                        li #{agency.AgncyFax}

include includes/footer.pug
