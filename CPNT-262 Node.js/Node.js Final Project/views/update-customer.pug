doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title #{_title}
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/styles.min.css')

include includes/navbar.pug

section.contact-clean
    console.log(result[0])
    form(id="register" method='POST' action="/update-customer-post")
        h2.text-center Update Customer
        each customer in customers
            input#name.form-control(type='text' name='CustomerId' readonly="readonly" required autofocus value=customer.CustomerId)
            input#name.form-control.mt-3(type='text' name='CustomerName' placeholder='Full Name' required='' autofocus='' value=customer.CustomerName)
            input#email.form-control.mt-3(type='email' placeholder='Email' name='CustomerEmail' required='' value=customer.CustomerEmail)
            input#postal.form-control.mt-3(type='text' name='CustomerPostal' placeholder='Postal Code (A1A 1A1)' required  value=customer.CustomerPostal)
            input#name.form-control.mt-3(type='text' name='CustomerPassword' placeholder='Password' required='' value=customer.CustomerPassword)
            button#confirm.btn.btn-primary(type='submit') Update

include includes/footer.pug
