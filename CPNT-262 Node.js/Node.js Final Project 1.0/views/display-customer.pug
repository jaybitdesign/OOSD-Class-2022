doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title #{_title}
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/styles.min.css')

include includes/navbar.pug

section.contact-clean
    form(id="display" method='GET' action="/display-customer-get")
        h2.text-center Display Customer
        select.form-select.my-3(name="CustomerId")
            option Select a customer
            each customer in result
                option(value=customer.CustomerId) #{customer.CustomerName}
        button#confirm.btn.btn-primary(type='submit') Display

include includes/footer.pug
